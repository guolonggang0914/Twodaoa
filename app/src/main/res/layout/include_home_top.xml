<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x89"
    android:background="#F2F4F5"
    android:gravity="center"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/fragment_home_cityselector"
        android:layout_width="@dimen/x106"
        android:layout_height="@dimen/x38"
        android:layout_marginLeft="@dimen/x30"
        android:background="@drawable/home_city"
        android:drawableRight="@drawable/xiala"
        android:gravity="center"
        android:text="北京"
        android:textColor="#333333"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/fragment_home_search"
        android:layout_width="@dimen/x366"
        android:layout_height="@dimen/x42"
        android:layout_marginLeft="@dimen/x57"
        android:background="@drawable/home_search"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/ic_home_nav_search_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15.5dp"
            android:gravity="center_vertical"
            android:text="麻辣小龙虾"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_home_xiaoxi"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x40"
        android:background="@drawable/home_yuan"
        android:orientation="vertical">

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/xiaoxi" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_home_saosao"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x30"
        android:background="@drawable/home_yuan"
        android:orientation="vertical">

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/saosao" />
    </LinearLayout>
</LinearLayout>
